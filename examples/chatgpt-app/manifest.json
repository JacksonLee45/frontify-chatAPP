{
    "appId": "<Your app ID>",
    "appType": "platform-app",
    "name": "frontify-chatgpt-app",
    "metadata": {
        "version": 1
    },
    "permissions": {
        "scopes": ["basic:read", "basic:write"]
    },
    "surfaces": {
        "mediaLibrary": {
            "assetAction": {
                "title": "ChatGPT Assistant",
                "type": ["image"],
                "filenameExtension": ["png", "jpeg"]
            },
            "assetCreation": {
                "title": "ChatGPT Content Generator"
            }
        }
    },
    "secrets": [
        { "key": "OPENAI_API_KEY", "label": "OpenAI API Key" }
    ],
    "network": {
        "endpoints": [
            {
                "name": "chatgpt-completion",
                "resource": "https://api.openai.com/v1/chat/completions",
                "options": {
                    "headers": {
                        "Content-Type": "application/json",
                        "Authorization": "Bearer %%OPENAI_API_KEY%%"
                    },
                    "method": "POST",
                    "body": {
                        "model": "$$model$$",
                        "messages": "$$messages$$",
                        "max_tokens": "$$max_tokens$$",
                        "temperature": "$$temperature$$"
                    }
                }
            }
        ]
    }
}